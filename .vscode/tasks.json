{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create import file",
            "type": "shell",
            "command": "./Build/CompileTriggerList/CreateImportFile.py",
            "args": [
                "${workspaceFolder}/Trigger",
                "TriggerList.j"
            ]
        },
        {
            "label": "Compile vjass",
            "type": "shell",
            "command": "powershell -ExecutionPolicy ByPass -File ./compile.ps1",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/Build/CompileJass/"
            }
        },
        {
            "label": "Compile vjass py",
            "type": "shell",
            "command": "./compile.py",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/Build/CompileJass/"
            }
        },
        {
            "label": "Build",
            "dependsOn": [
                "Create import file",
                "Compile vjass py"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}